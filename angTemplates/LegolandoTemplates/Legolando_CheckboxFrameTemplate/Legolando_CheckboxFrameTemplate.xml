<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

    <Script file="Legolando_CheckboxFrameTemplate.lua"/>

    <Frame name="Legolando_CheckboxFrameTemplate_AngleurUnderlight" mixin="Legolando_CheckboxFrameMixin_AngleurUnderlight" virtual="true">
		<Size x="1" y="1"/>
        <Layers>
            <Layer level="ARTWORK">
                <FontString name="$parent_Text" parentKey="text"  inherits="GameFontNormal" hidden="false">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT"/>
                    </Anchors>
                    <Scripts>
                        <OnEnter>
                            local parent = self:GetParent()
                            if not parent.tooltip then return end
                            if not parent.checkbox:IsEnabled() then return end
                            GameTooltip:SetOwner(self, "ANCHOR_BOTTOMRIGHT", 3, -3)
                            local colorBlu = CreateColor(0.61, 0.85, 0.92)
                            GameTooltip:AddLine(colorBlu:WrapTextInColorCode(self:GetText()))
                            GameTooltip:AddLine(parent.tooltip, 1, 1, 1, 0)
                            GameTooltip:Show()
                        </OnEnter>
                        <OnLeave>
                            local parent = self:GetParent()
                            if not parent.tooltip then return end
                            GameTooltip:Hide()
                        </OnLeave>
                    </Scripts>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <CheckButton name="$parent_Checkbox" mixin="Legolando_CheckboxMixin_AngleurUnderlight" parentKey="checkbox" virtual="true">
                <Size x="24" y="24"/>
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.text" relativePoint="RIGHT"/>
                </Anchors>
                <HitRectInsets>
                    <AbsInset left="0" right="0" top="0" bottom="8"/>
                </HitRectInsets>
                <Scripts>
                    <OnClick method="OnClick"/>
                    <OnEnter>
                        local parent = self:GetParent()
                        if not parent.tooltip then return end
                        if not self:IsEnabled() then return end
                        GameTooltip:SetOwner(parent.text, "ANCHOR_BOTTOMRIGHT", 3, -3)
                        local colorBlu = CreateColor(0.61, 0.85, 0.92)
                        GameTooltip:AddLine(colorBlu:WrapTextInColorCode(parent.text:GetText()))
                        GameTooltip:AddLine(parent.tooltip, 1, 1, 1, 0)
                        GameTooltip:Show()
                    </OnEnter>
                    <OnLeave>
                        local parent = self:GetParent()
                        if not parent.tooltip then return end
                        GameTooltip:Hide()
                    </OnLeave>
                </Scripts>
                <NormalTexture file="Interface\Buttons\UI-CheckBox-Up"/>
                <PushedTexture file="Interface\Buttons\UI-CheckBox-Down"/>
                <HighlightTexture file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
                <CheckedTexture name="$parentCheckedTexture" file="Interface\Buttons\UI-CheckBox-Check"/>
                <DisabledCheckedTexture file="Interface\Buttons\UI-CheckBox-Check-Disabled"/>
            </CheckButton>
        </Frames>
        <Layers>
            <Layer level="ARTWORK">
                <FontString name="$parent_DisabledText" parentKey="disabledText" justifyH="LEFT" hidden="true" inherits="SystemFont_Shadow_Small">
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.checkbox" relativePoint="RIGHT"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>

    <Frame name="Legolando_CheckboxesTemplate_AngleurUnderlight" mixin="Legolando_CheckboxesMixin_AngleurUnderlight" virtual="true">
        <Size x="1" y="1"/>
    </Frame>
</Ui>